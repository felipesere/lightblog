<% content_for :body do %>

  <nav>
    <a href="/" class="logo">
      <img src="/images/logos/white_logo.svg" alt="Home">
    </a>
  </nav>

<div class="content-container">
  <div class="container">
    <div class="article article--full">
      <section class="article__header">
        <h3 class="article__title"><%= post.title %></h3>
        <a href="/about"><span class="article__author">Felipe</span></a>
        &mdash;
        <span class="article__date"><%= post.date %></span>
      </section>

      <div class="article__body">
        <%= post.content %>
      </div>
    </div>
    <div class="bottom-navigation">
      <a href="#" class="left">← Newer Post</a>
      <a href="#" class="right">Older Post →</a>
    </div>

  </div>
</div>
<% end %>
